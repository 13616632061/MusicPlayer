<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lyf.com.musicplayer.ui.PlayMusicActivity.view.PlayMusicActivity">

    <ImageView
        android:id="@+id/iv_bg_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dimenWidth40"
        android:layout_height="@dimen/dimenWidth40"
        android:layout_margin="@dimen/mangin10"
        android:src="@mipmap/back" />

    <lyf.com.musicplayer.view.PlayMusic
        android:id="@+id/play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"></lyf.com.musicplayer.view.PlayMusic>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="歌曲名字"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/textSize14"
        android:textStyle="bold"></TextView>
</RelativeLayout>
